@model List<MyTraceCare.Models.Alert>

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "System Alerts";
}

<h2 class="mb-4">System Alerts</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No alerts have been generated.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th>Patient</th>
                <th>Message</th>
                <th>Risk</th>
                <th>Frame</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@(a.User?.FullName ?? "Unknown")</td>
                    <td>@a.Message</td>
                    <td>@a.RiskLevel</td>
                    <td>@a.FrameIndex</td>
                    <td>@a.CreatedAt.ToString("dd MMM yyyy • HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
