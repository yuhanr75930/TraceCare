@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f4f6f9;
            font-family: system-ui, sans-serif;
        }

        .sidebar {
            width: 240px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: #0f172a;
            color: #e5e7eb;
            padding: 24px 16px;
        }

            .sidebar .logo {
                text-align: center;
                margin-bottom: 32px;
            }

                .sidebar .logo h4 {
                    color: #fff;
                    margin-top: 8px;
                }

        .nav-link {
            color: #cbd5e1;
            font-size: 0.95rem;
            padding: 10px 14px;
            border-radius: 8px;
        }

            .nav-link.active, .nav-link:hover {
                background: #1f2937;
                color: #fff;
            }

        .main-content {
            margin-left: 240px;
            padding: 24px;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <div class="logo">
            <h4>TraceMat Admin</h4>
        </div>

        <nav class="nav flex-column">
            <a class="nav-link @(ViewContext.RouteData.Values["action"]!.ToString() == "Index" ? "active" : "")"
               href="/AdminDashboard/Index">Dashboard</a>

            <a class="nav-link @(ViewContext.RouteData.Values["action"]!.ToString() == "CreateUser" ? "active" : "")"
               href="/AdminDashboard/CreateUser">Create User</a>

            <a class="nav-link @(ViewContext.RouteData.Values["action"]!.ToString() == "Alerts" ? "active" : "")"
               href="/AdminDashboard/Alerts">System Alerts</a>

            <a class="nav-link text-danger mt-3" href="/Identity/Account/Logout">Logout</a>
        </nav>
    </div>

    <main class="main-content">
        @RenderBody()
    </main>

</body>
</html>
