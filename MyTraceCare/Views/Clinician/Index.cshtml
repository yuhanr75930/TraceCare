@model List<MyTraceCare.Models.ViewModels.ClinicianPatientViewModel>
@{
    Layout = "~/Views/Clinician/_ClinicianLayout.cshtml";
    ViewData["Title"] = "Clinician Dashboard";
}

<h3 class="mb-4">Assigned Patients</h3>

@if (!Model.Any())
{
    <div class="alert alert-info">No patients assigned.</div>
}

<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5>@p.FullName</h5>
                    <div class="text-muted small">@p.Email</div>
                    <div class="mt-2">
                        DeviceId: <strong>@p.DeviceId</strong>
                    </div>
                    <div class="mt-2">
                        Alerts: <span class="badge bg-danger">@p.AlertCount</span>
                    </div>

                    <a class="btn btn-dark w-100 mt-3"
                       href="/ClinicianDashboard/PatientDetails?id=@p.PatientId">
                        View Data
                    </a>
                </div>
            </div>
        </div>
    }
</div>
