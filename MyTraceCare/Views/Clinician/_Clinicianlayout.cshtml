@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Clinician Portal - TraceCare</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        body { background: #f3f4f6; font-family: system-ui; }

        .sidebar {
            width: 240px;
            background: #0f172a;
            color: white;
            height: 100vh;
            position: fixed;
            padding: 20px 15px;
        }

        .sidebar a {
            display: block;
            padding: 12px 16px;
            border-radius: 8px;
            color: #cbd5e1;
            margin-bottom: 8px;
            text-decoration: none;
        }

        .sidebar a.active,
        .sidebar a:hover {
            background: #1e293b;
            color: #fff;
        }

        .main-content {
            margin-left: 240px;
            padding: 30px;
        }
    </style>
</head>

<body>
    <div class="sidebar">
        <h4 class="text-center">Clinician</h4>

        <a href="/ClinicianDashboard/Index"
           class="@(ViewContext.RouteData.Values["controller"]!.ToString() == "ClinicianDashboard" ? "active" : "")">
            Dashboard
        </a>

        <a href="/Identity/Account/Logout" class="text-danger">Logout</a>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>
</body>
</html>
